	controllerName="zsmktest1zsmk_test1.controller.View1" displayBlock="true" id="home">
	<App id="app">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Button id = 'exportButton' enabled='false' text="Export a Spreadsheet" press="onExport"/>
					<List busy='true' noDataText="Drop list items here" id="__list0" items="{path:'/TrdHeaderSet', events:{ dataReceived: '.onDataReceived'}}">
